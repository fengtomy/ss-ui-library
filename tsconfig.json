{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "ss-ui-library": ["components/index.tsx"],
      "ss-ui-library/es/*": ["components/*"]
    },
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "lib": ["dom", "es2017", "es2015"],
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": true
  },
  "exclude": ["node_modules", "lib", "es"]
}
